generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int         @id @default(autoincrement())
  login    String      @unique
  password String
  Test     TestCases[]
}

model Tests {
  id          Int        @id @default(autoincrement())
  type        String
  data        Json
  TestCases   TestCases? @relation(fields: [testCasesId], references: [id])
  testCasesId Int?
}

model TestCases {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  userId Int
  testId Int
  UserId User    @relation(fields: [userId], references: [id])
  Tests  Tests[]
}
